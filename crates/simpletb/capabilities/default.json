{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "dock", "hitbox"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "window:allow-set-focus",
    "process:default",
    "process:allow-restart",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*:*"
        }
      ]
    }
  ]
}
